#!/usr/bin/env ruby

require "innodb"

filename, block_number = ARGV.shift(2)

log = Innodb::Log.new(filename)

puts "%-10s%-30s%-10s%-10s" % [
  "block",
  "type",
  "space",
  "page",
]
log.each_block do |block_number, block|
  if block.record
    puts "%-10i%-30s%-10i%-10i" % [
      block_number,
      block.record[:type],
      block.record[:space],
      block.record[:page_number],
    ]
    #block.dump
  end
end
